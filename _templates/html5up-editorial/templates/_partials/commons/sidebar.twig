            <nav id="menu">
                <header class="major">
                    <h2>Menu</h2>
                </header>
				<ul>
				{%- set activeItem = 'class="active"' %}
				{%- for sibling in nav.root.siblings %}
					<li><a href="{{ sibling.href }}"{{ activeItem|safe if sibling.active}}>{{ sibling.title }}</a></li>
				{%- endfor %}
				 {%- for sibling in nav.root.children %}
					<li>
					{%- if sibling.children|length  %}
						<span class="opener">{{ sibling.title }}</span>
						<ul>
							{%- for child in sibling.children %}
							<li><a href="{{child.href}}"{{ activeItem|safe if child.active }}>{{child.title}}</a></li>
							{%- endfor %}
						</ul>
					{%- else %}
						<a href="{{sibling.href}}"{{ activeItem|safe if sibling.active }}>{{sibling.title}}</a>
					{%- endif %}
					</li>
				{%- endfor %}
				</ul>
            </nav>

